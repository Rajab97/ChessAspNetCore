@model ChessWebAspNetCore.Models.DirectionDescription

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-xs-offset-1 col-xs-10 col-lg-offset-4 col-lg-4">
                <h2><a asp-action="Index" class=" backToListButton"><i class="fas fa-angle-double-left"></i></a>Create Description</h2>

                <div class="row">
                    <div class="col-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-row">
                                <div class="form-group col-md-8">
                                    <label asp-for="RowStep" class="control-label"></label>
                                    <input asp-for="RowStep" type="number" class="form-control" />
                                    <span asp-validation-for="RowStep" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputState">Up or Down</label>
                                    <select id="inputState" name="UpOrDown" class="form-control">

                                        <option value="1">Up</option>
                                        <option value="-1">Down</option>
                                    </select>
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-8">
                                    <label asp-for="ColumnStep" class="control-label"></label>
                                    <input asp-for="ColumnStep" type="number" class="form-control" />
                                    <span asp-validation-for="ColumnStep" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputState">Up or Down</label>
                                    <select id="inputState" name="RightOrLeft" class="form-control">
                                        <option value="1">Right</option>
                                        <option value="-1">Left</option>
                                    </select>
                                </div>

                            </div>
                            
                            <div class="clearfix">
                                <div class="form-group form-check left" style="margin-right:25px;">
                                    <label class="form-check-label cursor check" asp-for="PerpendicularMovement">
                                        <input asp-for="PerpendicularMovement" type="checkbox" class="option-input checkbox" />
                                        Moved Perpendicularly
                                    </label>
                                    <span asp-validation-for="PerpendicularMovement" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check left">
                                    <label class="form-check-label cursor check" asp-for="DiagonalMovement">
                                        <input asp-for="DiagonalMovement" type="checkbox" class="option-input checkbox" />
                                        Moved Diagonally
                                    </label>
                                    <span asp-validation-for="DiagonalMovement" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group clearfix">
                                <input type="submit" value="Create" class="btn btn-success right" />
                            </div>
                        </form>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>


