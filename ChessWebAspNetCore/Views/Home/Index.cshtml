@{
    ViewData["Title"] = "Home Page";
}
@using ChessWebAspNetCore.Models.ViewModels
@model HomeIndexViewModel



<div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-xs-offset-0 col-xs-12 col-lg-offset-3 col-lg-6">
     
        <div class="row">
            <h2>Figures</h2>
            <div class="buttonsRow col-12">
                <a class="btn btn-primary" style="float:right;margin-bottom:15px;" asp-action="CreateFigure"><i class="far fa-plus-square"></i></a>
            </div>
            <div class="col-12"></div>
            <div class="col-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Photo</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Figures figure in Model.Figures)
                        {
                            <tr figureId="@figure.Id">
                                <th scope="row" class="centeredContainer"><span class="centeredElement">@figure.Name</span></th>
                                <td><img src="~/images/@figure.Photo" class="centered" style="width:auto; height:50px;" alt="@figure.Name" /></td>
                                <td class="centeredContainer">
                                    <div class="centeredElement">
                                        <a asp-action="EditFigure" asp-route-Id="@figure.Id" class="btn btn-warning tableButton centeredContainer"><i class="fas fa-edit centeredElement"></i></a>
                                        <a asp-action="DeleteFigure" asp-route-Id="@figure.Id" class="btn btn-danger tableButton centeredContainer"><i class="fas fa-trash-alt centeredElement"></i></a>
                                    </div>
                                    @*<a asp-action="AddDirectionToCurrentFigure" asp-route-Id="@figure.Id" class="btn btn-success"><i class="fas fa-directions"></i></a>
                                <a asp-action="FigureDetails" asp-route-Id="@figure.Id" class="btn btn-info"><i class="fas fa-info-circle"></i></a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




