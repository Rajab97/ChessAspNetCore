@model ChessWebAspNetCore.Models.DTO.CreateFigureDto

@{
    ViewData["Title"] = "CreateFigure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-xs-offset-1 col-xs-10 col-lg-offset-4 col-lg-4">
            <h2><a asp-action="Index" class=" backToListButton"><i class="fas fa-angle-double-left"></i></a> Create Figure</h2>


            <hr />
            <div class="row">
                <div class="col-12">
                    <form asp-action="CreateFigure" enctype="multipart/form-data" method="post" class="clearfix">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Photo" class="control-label"></label>
                            <div class="inputFileContainer clearfix">
                                <input type="file" asp-for="Photo" value="" hidden />
                                <div class="placeHolderContainer">
                                    <strong class="filePlaceHoler">Choose File</strong>
                                </div>
                                <a class="chooseButton">Upload</a>
                            </div>
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>


                        <div class="form-group formMainButtons">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

            



            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
